  # Clean up from any previous run of this file   
  delete module raxmlPhylogenyGenerator
  delete module lentiPhyloUtility
  delete module lentiFigTreeAnnotationExporter 
  delete module alignmentColumnsSelectorLentiCapsid
  delete module alignmentColumnsSelectorLentiMatrix
  delete module alignmentColumnsSelectorLentiNucleocapsid
  delete module alignmentColumnsSelectorLentiRt
  delete module alignmentColumnsSelectorLentiIntegrase
  
  # Create all the modules we need
  create module -t raxmlPhylogenyGenerator
  create module -f modules/core/lentiPhyloUtility.xml
  create module -f modules/erv/lentiErvFigTreeAnnotationExporter.xml
  create module -f modules/core/alignmentColumnsSelectorLentiCapsid.xml
  create module -f modules/core/alignmentColumnsSelectorLentiMatrix.xml
  create module -f modules/core/alignmentColumnsSelectorLentiNucleocapsid.xml
  create module -f modules/core/alignmentColumnsSelectorLentiRt.xml
  create module -f modules/core/alignmentColumnsSelectorLentiIntegrase.xml

  
  # Create the phylogenies
  module raxmlPhylogenyGenerator

    generate nucleotide phylogeny AL_ROOT -s alignmentColumnsSelectorLentiMatrix \
      -w "fLocNotes.featureLoc.feature.name = 'matrix' and fLocNotes.ref_nt_coverage_pct >= 50" \
      -o trees/erv-root/lenti-erv-ma.tre NEWICK_BOOTSTRAPS

    generate nucleotide phylogeny AL_ROOT -s alignmentColumnsSelectorLentiCapsid \
      -w "fLocNotes.featureLoc.feature.name = 'capsid' and fLocNotes.ref_nt_coverage_pct >= 50" \
      -o trees/erv-root/lenti-erv-ca.tre NEWICK_BOOTSTRAPS

    generate nucleotide phylogeny AL_ROOT -s alignmentColumnsSelectorLentiNucleocapsid \
      -w "fLocNotes.featureLoc.feature.name = 'nucleocapsid' and fLocNotes.ref_nt_coverage_pct >= 50" \
      -o trees/erv-root/lenti-erv-nc.tre NEWICK_BOOTSTRAPS

    generate nucleotide phylogeny AL_ROOT -s alignmentColumnsSelectorLentiRt \
      -w "fLocNotes.featureLoc.feature.name = 'RT' and fLocNotes.ref_nt_coverage_pct >= 50" \
      -o trees/erv-root/lenti-erv-rt.tre NEWICK_BOOTSTRAPS

    generate nucleotide phylogeny AL_ROOT -s alignmentColumnsSelectorLentiIntegrase \
      -w "fLocNotes.featureLoc.feature.name = 'IN' and fLocNotes.ref_nt_coverage_pct >= 50" \
      -o trees/erv-root/lenti-erv-in.tre NEWICK_BOOTSTRAPS

    exit


  # Re-root phylogeny 
  module LentiPhyloUtility 

	reroot-phylogeny \
      --inputFile trees/erv-root/lenti-erv-ma.tre NEWICK_BOOTSTRAPS \
      --midpoint \
      --outputFile trees/erv-root/lenti-erv-ma.export_nucs-MidpointRerooted.tree NEWICK_BOOTSTRAPS

	reroot-phylogeny \
      --inputFile trees/erv-root/lenti-erv-ca.tre NEWICK_BOOTSTRAPS \
      --midpoint \
      --outputFile trees/erv-root/lenti-erv-ca.export_nucs-MidpointRerooted.tree NEWICK_BOOTSTRAPS

	reroot-phylogeny \
      --inputFile trees/erv-root/lenti-erv-nc.tre NEWICK_BOOTSTRAPS \
      --midpoint \
      --outputFile trees/erv-root/lenti-erv-nc.export_nucs-MidpointRerooted.tree NEWICK_BOOTSTRAPS

	reroot-phylogeny \
      --inputFile trees/erv-root/lenti-erv-rt.tre NEWICK_BOOTSTRAPS \
      --midpoint \
      --outputFile trees/erv-root/lenti-erv-rt.export_nucs-MidpointRerooted.tree NEWICK_BOOTSTRAPS

	reroot-phylogeny \
      --inputFile trees/erv-root/lenti-erv-in.tre NEWICK_BOOTSTRAPS \
      --midpoint \
      --outputFile trees/erv-root/lenti-erv-in.export_nucs-MidpointRerooted.tree NEWICK_BOOTSTRAPS

    exit


  # Export annotations
  module lentiFigTreeAnnotationExporter 

    export figtree-annotation AL_ROOT -w "fLocNotes.featureLoc.feature.name = 'matrix'  \
      and fLocNotes.ref_nt_coverage_pct >= 50" -f trees/erv-root/lenti-erv-ma.figtree-annotations.tsv

    export figtree-annotation AL_ROOT -w "fLocNotes.featureLoc.feature.name = 'capsid'  \
      and fLocNotes.ref_nt_coverage_pct >= 50" -f trees/erv-root/lenti-erv-ca.figtree-annotations.tsv

    export figtree-annotation AL_ROOT -w "fLocNotes.featureLoc.feature.name = 'nucleocapsid'  \
      and fLocNotes.ref_nt_coverage_pct >= 50" -f trees/erv-root/lenti-erv-nc.figtree-annotations.tsv

    export figtree-annotation AL_ROOT -w "fLocNotes.featureLoc.feature.name = 'RT'  \
      and fLocNotes.ref_nt_coverage_pct >= 50" -f trees/erv-root/lenti-erv-rt.figtree-annotations.tsv

    export figtree-annotation AL_ROOT -w "fLocNotes.featureLoc.feature.name = 'IN'  \
      and fLocNotes.ref_nt_coverage_pct >= 50" -f trees/erv-root/lenti-erv-in.figtree-annotations.tsv

  exit

