  # Re-root phylogeny 
  module lentiPhyloUtility 

	reroot-phylogeny \
      --inputFile trees/main-species/lenti-srlv-matrix.tre NEWICK_BOOTSTRAPS \
      --midpoint \
      --outputFile trees/main-species/lenti-srlv-matrix.export_nucs-MidpointRerooted.tree NEWICK_BOOTSTRAPS

